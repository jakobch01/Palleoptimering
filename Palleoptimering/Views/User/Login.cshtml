@model Palleoptimering.Models.Login

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="Username" class="control-label">Brugernavn:</label>
        <input asp-for="Username" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Adgangskode:</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>
    <div class="form-group form-check">
        <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
        <label asp-for="RememberMe" class="form-check-label">Husk mig</label>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>

<p>
    Har du ikke en konto?
    <a asp-action="Create" asp-controller="User">Register en konto</a>
</p>
